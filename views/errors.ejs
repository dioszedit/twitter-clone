<% if( typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <% errors.forEach( text => { %>
            <%= text %><br/>
        <% }) %>
    </div>
<% } %>
<script>
    $("div .alert-danger").fadeTo(2000, 500).slideUp(500, function(){
        $("div .alert-danger").slideUp(500);
    });
</script>