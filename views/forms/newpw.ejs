<form method="post">
    <h4>Új jelszó generálásához szükséges adatok</h4>
    <%- include('../success') %>
    <% if( typeof success === 'undefined' || success.length === 0 ) { %>
        <%- include('../errors') %>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" placeholder="*********" name="password">
            <label for="password">Új jelszó</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="rePassword" placeholder="*********" name="rePassword">
            <label for="re-password">Új jelszó ismét</label>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-secondary" href="/">Vissza a főoldalra</a>
            <input type="submit" class="btn btn-primary" value="Mentés"/>
        </div>
    <% } else { %>
        <a class="btn btn-outline-secondary" href="/">Vissza a főoldalra</a>
    <% } %>
</form>