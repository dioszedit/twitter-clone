<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <h4>Új tweet</h4>
            <div class="form-floating mb-3">
                <textarea type="text" class="form-control" id="content" name="content"
                          style="height: 150px"><%= tweet.content %></textarea>
                <label for="name">Tweet tartalma</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="clearfix">
                <% if(tweet.image) { %>
                    <div id="tweet-img-div" class="mb-3">
                        <img class="img-fluid rounded w-100" src="/upload/<%= tweet.image %>" alt="">
                    </div>
                    <div class="mb-3 float-end">
                        <a class="btn btn-outline-secondary mx-1" id="del-tweet-img">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                            </svg>
                        </a>
                    </div>
                <% } %>
                <div id="upload" class="mb-3<% if(tweet.image) { %> d-none <% } %>">
                    <label for="image" class="form-label">Kép</label>
                    <input class="form-control" type="file" id="image" name="image">
                    <input type="hidden" id="tweet-img" name="tweetImg" value="<%= tweet.image %>">
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" href="/tweet/<%= slug %>">Vissza</a>
                <input type="submit" class="btn btn-primary" value="Mentés"/>
            </div>
        </div>
    </div>
</form>

<script>
    $('#del-tweet-img').click(() => {
        $('#tweet-img').val('');
        $('#del-tweet-img').hide();
        $('#tweet-img-div').hide('slow');
        $('#upload').removeClass('d-none');
    });
</script>